@{
    ViewData["Title"] = "سفارشات";//از کجا و به کجا هم باید مشخصذباشه
    ViewData["Account"] = "active";
}
@section head{
    <link rel="stylesheet" href="~/css/Account/account.css" asp-append-version="true" />
    <link href="~/lib/persian-datepicker/dist/css/persian-datepicker.css" rel="stylesheet" />
    <link href="~/lib/persian-datepicker/dist/css/persian-datepicker.min.css" rel="stylesheet" />
    <link href="~/css/datapicker-style.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/Select2/css/select2.min.css" rel="stylesheet" />

}

<div class="row container-fluid m-0 mt-3">
    <div class="col-lg-4 col-md-5 col-12 list-group bg-white  px-4">
        <div class="card border-0 shadow user-menu">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="" asp-controller="Account" asp-action="Index">
                        <i class="la la-user"></i>
                        <p class="text">   حساب کاربری</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Orders">
                        <i class="la la-map-o"></i>
                        <p class="text">  سفرهای من</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="" asp-controller="Account" asp-action="Passengers">
                        <i class="la la-group"></i>
                        <p class="text">   لیست مسافران</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="active" href="#">
                        <i class="la 	la-money"></i>
                        <p class="text">  موجودی و تراکنشها</p>
                    </a>
                </li>

            </ul>
        </div>
    </div>
    <div class="col-lg-8 col-md-7 col-12 bootstrap-switch-small info m-0 p-0">
        @*فیلتر ها*@
        <div class="card shadow border-0 p-4">
            <h5>
                <svg viewBox="0 0 24 24" width="1.5rem" height="1.5rem" fill="currentColor" class="ml-3 text-grays-500" data-v-b664eb7e=""><path d="M20.25 4.5c1.24 0 2.25 1.01 2.25 2.25v10.5c0 1.24-1.01 2.25-2.25 2.25H3.75c-1.24 0-2.25-1.01-2.25-2.25V6.75c0-1.24 1.01-2.25 2.25-2.25h16.5ZM21 9.75H3v7.5c0 .414.336.75.75.75h16.5a.75.75 0 0 0 .75-.75v-7.5ZM9 13.5A.75.75 0 1 1 9 15H5.25a.75.75 0 1 1 0-1.5H9Zm3 0a.75.75 0 1 1 0 1.5h-.75a.75.75 0 1 1 0-1.5H12Z"></path></svg>
